<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <View
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:background="#00ACB9"></View>

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="290dp"
        android:layout_height="247dp"

        android:src="@drawable/ic_image_logo"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="82dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The mobile application allows those    who need help to find it. And for those who can help, do it as conveniently and quickly as possible."
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="495dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help is always there"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="407dp" />

